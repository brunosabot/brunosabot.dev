{
  "name": "brunosabot.dev",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint:css": "stylelint --fix components/**/*.css styles/**/*.css",
    "lint:format": "prettier --write \"**/*.{css,js,jsx,json,md,ts,tsx}\"",
    "lint:ts": "eslint --fix \"components/**/*.tsx\" \"lib/**/*.ts\" \"app/**/*.tsx\"",
    "lint": "eslint",
    "postbuild": "next-sitemap",
    "start": "next start -p 8080",
    "preinstall": "npx only-allow pnpm"
  },
  "pnpm": {
    "overrides": {
      "csstype": "3.2.3"
    }
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@next/eslint-plugin-next": "^16.0.8",
    "@notionhq/client": "^5.4.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.556.0",
    "marked": "^17.0.1",
    "nanoid": "^5.1.6",
    "next": "16.0.8",
    "notion-to-md": "^3.1.9",
    "prismjs": "^1.30.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "reading-time": "^1.5.0",
    "sha.js": "^2.4.12",
    "sharp": "^0.34.5",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.49.0",
    "ulid": "^3.0.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/prismjs": "^1.26.5",
    "@types/react": "19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sha.js": "^2.4.4",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-css-modules": "^4.5.1",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3"
  },
  "lint-staged": {
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --ext .js,.ts,.tsx",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
