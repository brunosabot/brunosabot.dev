{
  "name": "brunosabot.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbo",
    "lint:css": "stylelint --fix components/**/*.css styles/**/*.css",
    "lint:format": "prettier --write \"**/*.{css,js,jsx,json,md,ts,tsx}\"",
    "lint:ts": "eslint --fix \"components/**/*.tsx\" \"lib/**/*.ts\" \"app/**/*.tsx\"",
    "lint": "next lint",
    "postbuild": "next-sitemap",
    "start": "next start -p 8080",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@notionhq/client": "^2.2.15",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "date-fns": "^4.1.0",
    "encoding": "^0.1.13",
    "marked": "^15.0.6",
    "nanoid": "^5.0.9",
    "next": "15.1.6",
    "notion-to-md": "^3.1.4",
    "prismjs": "^1.29.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "reading-time": "^1.5.0",
    "sha.js": "^2.4.11",
    "sharp": "^0.33.5",
    "typescript": "5.7.3",
    "ulid": "^2.3.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/prismjs": "^1.26.5",
    "@types/react": "19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/sha.js": "^2.4.4",
    "@types/uuid": "^10.0.0",
    "eslint": "9.19.0",
    "eslint-config-next": "15.1.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.4.2",
    "stylelint": "^16.14.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-recommended": "^15.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.2"
  },
  "lint-staged": {
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --ext .js,.ts,.tsx",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
