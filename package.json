{
  "name": "brunosabot.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint:css": "stylelint --fix components/**/*.css styles/**/*.css",
    "lint:format": "prettier --write \"**/*.{css,js,jsx,json,md,ts,tsx}\"",
    "lint:ts": "eslint --fix \"components/**/*.tsx\" \"lib/**/*.ts\" \"app/**/*.tsx\"",
    "lint": "next lint",
    "postbuild": "next-sitemap",
    "start": "next start -p 8080",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@notionhq/client": "^2.2.15",
    "@vercel/analytics": "^1.2.2",
    "@vercel/speed-insights": "^1.0.10",
    "date-fns": "^3.6.0",
    "encoding": "^0.1.13",
    "marked": "^12.0.2",
    "nanoid": "^5.0.7",
    "next": "14.2.3",
    "node-fetch": "^3.3.2",
    "notion-to-md": "^3.1.1",
    "prismjs": "^1.29.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "reading-time": "^1.5.0",
    "sha.js": "^2.4.11",
    "sharp": "^0.33.4",
    "typescript": "5.4.5",
    "ulid": "^2.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/prismjs": "^1.26.4",
    "@types/react": "18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/sha.js": "^2.4.4",
    "@types/uuid": "^9.0.8",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.2.5",
    "stylelint": "^16.5.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0"
  },
  "lint-staged": {
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --ext .js,.ts,.tsx",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
